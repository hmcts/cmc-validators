{
  "compilerOptions": {
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "strictNullChecks": true,
    "outDir": "dist/",
    "lib": [
      "es6",
      "es2016.array.include",
      "es2017.object",
      "dom"
    ],
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "src",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "paths": {
      "validators/*":[
        "main/*"
      ],
      "test/*": [
        "test/*"
      ]
    }
  }
}
